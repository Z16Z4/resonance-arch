def typingPrint(text):
  for character in text:
    sys.stdout.write(character)
    sys.stdout.flush()
    time.sleep(0.05)

def typingInput(text):
  for character in text:
    sys.stdout.write(character)
    sys.stdout.flush()
    time.sleep(0.05)
  value = input()
  return value

def clearScreen():
  os.system("clear")

def exit_program():
    neo = input("> ")
    if neo == "y":
        clearScreen()
        time.sleep(1)
        typingPrint("Good bye!\n")
        typingPrint("This screen will clear itself in 3..")
        time.sleep(1)
        typingPrint("2..")
        time.sleep(1)
        typingPrint("1..")
        time.sleep(1)
        clearScreen()
        os.system("timeout --foreground 1s asciiquarium")
    elif neo == "n":
        exit_program()
    else:
        typingPrint("wake up neo.")
        time.sleep(1)
        exit_program()

typingPrint("Hello friend, welcome to resonance arch\n\n")
